  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "axios": "^0.21.1",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "bootstrap": "^5.0.1",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "jquery": "^3.6.0",
    "pg": "^8.6.0",
    "popper.js": "^1.16.1",
    "vue": "^2.6.12",
    "vue-axios": "^3.2.4",
    "vue-router": "^3.5.1",
    "vuex": "^3.6.2"
