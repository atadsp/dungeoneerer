{
  "name": "dungeoneerer",
  "version": "0.0.1",
  "description": "A D&D 3.5 and Pathfinder 1 resource",
  "main": "index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node server/server.js",
    "watch": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atadsp/dungeoneerer.git"
  },
  "author": "Chris Beckman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atadsp/dungeoneerer/issues"
  },
  "homepage": "https://github.com/atadsp/dungeoneerer#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jquery": "^3.5.1",
    "pg": "^8.2.1",
    "typescript": "^3.9.3",
    "vue": "^2.6.11",
    "vue-axios": "^2.1.5",
    "vue-router": "^3.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/bootstrap": "^4.5.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/jquery": "^3.3.38",
    "@types/node": "^14.0.5",
    "@types/pg": "^7.14.3",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "server",
      "client"
    ],
    "exec": "rm -rf .expressvue && npm start",
    "ext": "ts vue css scss"
  }
}
