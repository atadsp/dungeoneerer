    "vue-loader": "^16.2.0",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^5.37.1",
    "webpack-chain": "^6.5.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.bundle.js",
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
